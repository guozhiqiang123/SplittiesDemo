<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--格式：tv_weight_size_color_other-->
    <!--weight：normal、medium、bold-->
    <!--size：xxsp-->
    <!--color：white1、white2、black1、black2-->
    <!--other： letterSpacing.ltc-->

    <style name="tv_normal_14sp_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="tv_normal_16sp_black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="tv_medium_20sp_black">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="tv_normal_14sp_grey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="tv_normal_16sp_grey">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="tv_medium_14sp_grey">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="tv_medium_16sp_grey">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>
</resources>